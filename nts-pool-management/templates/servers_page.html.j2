{% extends "main.html" %}
{% block nav_servers %}aria-current="page"{% endblock %}

{% block header %}<h1>Servers</h1>{% endblock %}

{% block content %}
<section>
  <h2>Add a server</h2>
  <form>
    <input type="text" placeholder="Hostname or IP address" />
    <button type="submit">Add</button>
  </form>
</section>
<section>
  <h2>Servers</h2>
  <ul>
    {%- for server in servers %}
     <li>{{ server -}}</li>
    {% endfor %}
  </ul>
</section>
{% endblock %}
